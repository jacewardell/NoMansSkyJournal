<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                tools:context="com.example.sadostrich.Controllers.AddDiscoveryActivity"
                android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/planet_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/planet_date_button"
        android:layout_marginRight="5dp"
        android:src="@mipmap/add_image"
        android:scaleType="center"/>

    <Button
        android:id="@+id/planet_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/planet_common_name_field"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/planet_common_name_field"/>

    <EditText
        android:id="@+id/planet_common_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/planet_date_button"
        android:layout_toEndOf="@+id/planet_imageview"
        android:hint="@string/common_name"
        android:maxLines="2"/>

    <EditText
        android:id="@+id/planet_scientific_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/planet_common_name_field"
        android:layout_toEndOf="@+id/planet_imageview"
        android:hint="@string/scientific_name"
        android:maxLines="2"/>

    <EditText
        android:id="@+id/planet_description_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/planet_scientific_name_field"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:maxLines="5"/>

    <EditText
        android:id="@+id/planet_story_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/planet_description_field"
        android:ems="10"
        android:hint="@string/discovery_story"
        android:inputType="textMultiLine"
        android:maxLines="10"/>

    <EditText
        android:id="@+id/planet_solar_system_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/planet_story_field"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/planet_story_field"
        android:hint="@string/solar_system_name"
        android:maxLines="2"/>

    <Spinner
        android:id="@+id/planet_size_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/planet_solar_system_name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:spinnerMode="dialog"
        android:background="@color/dropdown"/>

</RelativeLayout>