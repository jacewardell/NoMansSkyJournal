<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/d16">

            <LinearLayout
                android:id="@+id/layout_linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d4"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/d4"
                        android:text="@string/label_size"
                        android:textColor="@color/structure_green"
                        android:textSize="@dimen/ts16" />

                    <Spinner
                        android:id="@+id/spinner_structure_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/structure_green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d4"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/d4"
                        android:layout_marginStart="@dimen/d8"
                        android:text="@string/label_type"
                        android:textColor="@color/structure_green"
                        android:textSize="@dimen/ts16" />

                    <Spinner
                        android:id="@+id/spinner_structure_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d8"
                        android:layout_weight="1"
                        android:backgroundTint="@color/structure_green" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_linear1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d4"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/d4"
                        android:text="@string/label_has_save"
                        android:textColor="@color/structure_green"
                        android:textSize="@dimen/ts16" />

                    <Spinner
                        android:id="@+id/spinner_structure_has_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/structure_green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d4"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/d4"
                        android:layout_marginStart="@dimen/d8"
                        android:text="@string/label_trading"
                        android:textColor="@color/structure_green"
                        android:textSize="@dimen/ts16" />

                    <Spinner
                        android:id="@+id/spinner_structure_trading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d8"
                        android:layout_weight="1"
                        android:backgroundTint="@color/structure_green" />
                </LinearLayout>
            </LinearLayout>

            <com.sadostrich.nomansskyjournal.Views.LifeSpinnerItem
                android:id="@+id/structure_life_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_linear2"
                android:layout_marginBottom="@dimen/d16" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_previous_add_discovery"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d48"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/d16"
        android:layout_marginStart="@dimen/d16"
        android:background="@color/structure_green"
        android:text="@string/previous" />

    <Button
        android:id="@+id/btn_submit_discovery"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d48"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/d16"
        android:layout_marginEnd="@dimen/d16"
        android:background="@color/structure_green"
        android:text="@string/submit" />
</FrameLayout>