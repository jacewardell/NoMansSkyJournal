<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- BG Fill -->
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/accent"/>

			<!--
			Padding is added after drawing, so, next item is
			drawn within the new padding set here.
			-->
		</shape>
	</item>

	<!-- Corner Trim -->
	<item>
		<rotate
			android:fromDegrees="45"
			android:pivotX="-75%"
			android:pivotY="104%">
			<shape
				android:shape="rectangle">
				<solid android:color="@color/toolbar_dark"/>
			</shape>
		</rotate>
	</item>

</layer-list>