<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Disabled -->
	<item android:color="@color/text_gray" android:state_enabled="false"/>
	<!-- Pressed -->
	<item android:color="@color/primary" android:state_enabled="true"
		  android:state_pressed="true"/>
	<!-- Focused -->
	<item android:color="@color/seconday_text" android:state_enabled="true"
		  android:state_focused="true"/>
	<!-- Enabled -->
	<item android:color="@color/text_icons" android:state_enabled="true"/>

</selector>